
@using Blogge.Models

@{
    ViewBag.Title = "Generic";
}

@using (var ctx = new ApplicationDbContext())
{
    var post = ctx.Posts.Find(Convert.ToInt32(Url.RequestContext.RouteData.Values["id"]));

    <h1 class="text-center">
        @post.Title
    </h1>
    <h6 class="text-center" style="padding-bottom: 10px">
        Author | @post.Author
    </h6>

    <div class="container">
        @post.Content
    </div>
}

