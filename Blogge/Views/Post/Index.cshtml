@model Blogge.Core.Models.Post
@using Blogge.Models
@{
    ViewBag.Title = "Index";
}

<h2>Blog feed</h2>

@using (var ctx = new ApplicationDbContext())
{
    foreach (var post in ctx.Posts)
    {
        <div class="panel panel-body">
            <h3>@post.Title</h3>
            Author | @post.Author

            <a href="@Url.Action("Generic", "Post", new {@id = post.Id })">
                Read more...
            </a>
            
        </div>
    }
}