@model Blogge.Models.ViewModels.ChangeAvatarViewModel


@using (Html.BeginForm("ChangeAvatar", "Manage", new { @class = "form-horizontal", role = "form" }, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <h4>Change Avatar</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.file, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            <input type="file" name="file" id="file" style="width: 100%" accept="image/*"/>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Change avatar" class = "btn btn-primary" style = "color:white" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}